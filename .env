# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=qrag3
POSTGRES_HOST=db
POSTGRES_PORT=5432

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Model Configuration
MODEL_CACHE_DIR=/app/models_cache
MODEL_WEIGHTS_OFFLOAD_DIR=/app/models_cache/offload
MODEL_NAME=deepseek-ai/deepseek-llm-7b-base

# Memory Management
MAX_RAM_USAGE=4G
ENABLE_WEIGHT_OFFLOADING=true
CLEANUP_CACHE_ON_START=true

# Server Configuration
API_WORKERS=2

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000

# Security
ENABLE_AUDIT_LOG=true
API_KEY_HEADER=X-API-KEY

# Hugging Face Configuration
HF_HUB_DISABLE_SYMLINKS_WARNING=1
HF_HUB_DISABLE_EXPERIMENTAL_WARNING=1
HF_HUB_DISABLE_IMPLICIT_TOKEN=1
DISABLE_TELEMETRY=1

# Cache Directories
TRANSFORMERS_CACHE=/app/models_cache/transformers
HF_HOME=/app/models_cache/huggingface
